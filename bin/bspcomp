#!/usr/bin/env bash

# Terminate if compton/xborders is already running
killall -q compton xborders

# Wait until the processes have been shut down
while pgrep -u $UID -x compton >/dev/null; do sleep 1; done

# Launch compton
picom -f &

# Launch xborders
./xborders --border-radius 15 --border-width 3 --border-rgba 222d32ff &
